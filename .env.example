# Flare-Aid Environment Variables
# Copy to .env and fill in values

# PostgreSQL (auto-set by Vercel Postgres, or set manually for local dev)
# POSTGRES_URL=postgresql://user:pass@host:5432/dbname?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flareaid

# Coston2 Testnet
COSTON2_RPC_URL=https://coston2-api.flare.network/ext/C/rpc
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Next.js
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_COSTON2_RPC=https://coston2-api.flare.network/ext/C/rpc

# Admin Auth
ADMIN_JWT_SECRET=change_this_to_a_long_random_string

# Off-ramp (stubbed for MVP)
TRANSAK_API_KEY=mock_key

# Ingestion cron key
CRON_API_KEY=change_this_secret
